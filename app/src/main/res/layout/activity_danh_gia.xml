<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_danh_gia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.vnh.lazadaofficial.View.DanhGia.DanhGiaActiviti">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhận xét và đánh giá sản phẩm này"
        android:textSize="15sp" />

    <RatingBar
        android:id="@+id/rb_binhchon"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:scaleX=".5"
        android:scaleY=".5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_tieudedanhgia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/et_TieuDeDanhGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_noidungdanhgia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/et_NoiDungDanhGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nội dung" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_DangDanhGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgLogo"
        android:text="Đăng đánh giá"
        android:layout_marginTop="5dp"
        />


</LinearLayout>
