<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroudtoolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/bgLogo</item>
        <item name="android:textColorPrimary">@color/bgWhite</item>

    </style>

    <style name="menutextcolor" parent="AppTheme">
        <item name="android:textColorPrimary">@color/backgroudtoolbar</item>
        <item name="drawerArrowStyle">@style/changetogglecolor</item>

    </style>
    <style name="changetogglecolor" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/bgWhite</item>

    </style>

    <style name="capfale" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <declare-styleable name="CustomEditTextPass">
        <attr name="useStrike" format="boolean"/>
        <attr name="useValidate" format="boolean"/>
    </declare-styleable>

</resources>
